{
  "private": true,
  "version": "1.2.0",
  "keywords": [
    "vite",
    "vite-plugin",
    "windicss",
    "tailwindcss"
  ],
  "scripts": {
    "example:dev": "npm -C examples/vue run dev",
    "example:build": "npm -C examples/vue run build",
    "dev": "pnpm -r --parallel --filter ./packages run dev",
    "build": "cp README.md packages/vite-plugin-windicss && pnpm -r --filter ./packages run build",
    "publish:ci": "pnpm -r --filter ./packages publish --access public --no-git-checks",
    "lint": "eslint '**/*.{js,ts,vue,json}'",
    "lint:fix": "nr lint --fix",
    "release": "npx bumpp package.json packages/*/package.json --commit --tag --push",
    "test": "jest --runInBand",
    "test:update": "jest --runInBand --u",
    "test:examples": "pnpm -r --filter ./examples run build"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.6.6",
    "@antfu/ni": "^0.7.0",
    "@antfu/utils": "^0.2.4",
    "@types/debug": "^4.1.5",
    "@types/fs-extra": "^9.0.11",
    "@types/jest": "^26.0.23",
    "@types/micromatch": "^4.0.1",
    "@types/node": "^15.12.4",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@windicss/plugin-utils": "workspace:*",
    "bumpp": "^6.0.6",
    "debug": "^4.3.2",
    "eslint": "^7.29.0",
    "eslint-plugin-jest": "^24.3.6",
    "fast-glob": "^3.2.5",
    "fs-extra": "^10.0.0",
    "git-ensure": "^0.1.0",
    "jest": "^27.0.5",
    "magic-string": "^0.25.7",
    "pnpm": "^6.9.0",
    "rollup": "^2.52.2",
    "ts-jest": "^27.0.3",
    "tsup": "^4.11.2",
    "typescript": "^4.3.4",
    "vite": "^2.3.8",
    "vite-plugin-restart": "^0.0.2",
    "windicss": "^3.1.3"
  }
}
